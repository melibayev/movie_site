<div class="dle-comm_item js-comm">
    <div class="dle-comm_heading e-flex">
        <div class="dle-comm_user js-comm-avatar">
            <img src="{foto}" alt="{login}">
            <div class="dle-comm_user-text">
                [not-group=5]{author}[/not-group][group=5]{login}[/group]
                <span>{date}</span>
            </div>
        </div>
        <div class="dle-comm_rating">
            [rating-plus]<i class="fa-regular fa-thumbs-up"></i>[/rating-plus]{rating}
			[rating-minus]<i class="fa-regular fa-thumbs-down"></i>[/rating-minus]
        </div>
    </div>
    <p>{comment}</p>
    <div class="dle-comm_meta e-flex">
        [reply]Ответить[/reply]
        [com-edit]Редактировать[/com-edit]
        [com-del]Удалить[/com-del]
        <li class="checkbox">{mass-action}</li>
    </div>
</div>